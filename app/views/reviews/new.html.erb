
<h1>Add a Review for <%= @restaurant.name %></h1>

<br>

<%= form_with(model: [@restaurant, @review], local: true) do |form| %>

  <div>
    <%= form.label :content, "Review Content" %>
    <%= form.text_area :content, rows: 4 %>
  </div>

 <br>

  <div>
    <%= form.label :rating %>
    <%= form.select :rating, options_for_select([0, 1, 2, 3, 4, 5]) %>
  </div>

<br>

  <div>
    <%= form.submit "Submit Review" %>
  </div>
<% end %>

<%= link_to 'Back to Restaurant', restaurant_path(@restaurant) %>
