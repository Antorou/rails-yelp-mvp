
<h1>Create a New Restaurant</h1>

<%= form_with model: @restaurant do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>
  </div>

  <div>
    <%= form.submit "Create Restaurant" %>
  </div>
<% end %>

<%= link_to 'Back to all restaurants', restaurants_path %>
